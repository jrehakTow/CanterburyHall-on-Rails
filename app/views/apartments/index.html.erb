<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Unitnumber</th>
      <th>Bedroom</th>
      <th>Bathroom</th>
      <th>Sizesqft</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.unitNumber %></td>
        <td><%= apartment.bedroom %></td>
        <td><%= apartment.bathroom %></td>
        <td><%= apartment.sizeSQFT %></td>
        <td><%= apartment.notes %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

